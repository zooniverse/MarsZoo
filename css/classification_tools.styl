.classification-tools {
  background: linear-gradient(rgba($black, 0), rgba($black, 0.33), rgba($black, 0));
  padding: 30px 5px;

  label {
    cursor: pointer;
    display: block;

    > input {
      position: absolute;
      visibility: hidden;
    }
  }

  .label {
    border-top: 1px solid rgba($white, 0.2);
    display: block;
    font-size: 10px;
    font-weight: bold;
    padding: 10px 0;
    text-align: center;
    user-select: none;

    &:hover {
      background: rgba($black, 0.2);
    }

    .unchecked-icon {
      display: inline-block;
    }

    .checked-icon {
      color: $red;
      display: none;
    }
  }

  :checked + .label {
    background: rgba($white, 0.1);

    .unchecked-icon {
      display: none;
    }

    .checked-icon {
      display: inline-block;
    }
  }

  :disabled + .label {
    opacity: 0.33;
    pointer-events: none;
  }

  button,
  .followup a {
    @extends #push-button;
    display: inline-block;
    margin: 3px 0;
    width: 100%;

    &:hover {
      background: $light-blue;
    }
  }

  .share {
    clearfix();

    a {
      float: left;
      width: 48%;

      &:first-child {
        margin-right: 4%;
      }
    }
  }
}
