.app-navigation {
  color: $red;

  .on-classify & {
    color: $white;
  }

  .section {
    background: rgba($white, 0.8);
    box-shadow: 0 1px 3px -2px rgba($black, 0.5);
    margin-bottom: 5px;

    .on-classify & {
      background: transparent;
      border-top: 1px solid rgba($white, 0.25);
      box-shadow: none;
      opacity: 0.75;

      &:first-child {
        border-top: 0;
      }

      &.classify {
        opacity: 1;
      }
    }

    > .expando {
      display: none;
    }

    &.active > .expando {
      display: block;
    }

    > a {
      display: block;
      font-weight: bold;
      padding: 8px 20px;
    }
  }

  .navigation-logo {
    font-size: 16px;
    letter-spacing: 1px;
    line-height: 24px;
    overflow: hidden;
    text-transform: uppercase;

    strong {
      display: block;
      font-size: 40px;
      letter-spacing: 0;
      text-transform: lowercase;
    }
  }

  .sub-nav {
    & > a {
      border-top: 1px solid rgba($black, 0.1);
      box-shadow: 0 1px 0 $white inset;
      display: block;
      font-size: 12px;
      padding: 3px 20px;

      .on-classify & {
        border-top: 1px solid rgba($white, 0.25);
        box-shadow: none;
      }
    }
  }

  a,
  button {
    color: inherit;
    text-decoration: none;

    &:hover {
      background: $white;

      .on-classify & {
        background: rgba($black, 0.25);
      }
    }
  }
}
