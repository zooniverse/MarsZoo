@keyframes rotate {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-50%);
  }
}

@keyframes float-around {
  0% {
    transform: translate3d(-350px, 0, 0) rotate(90deg);
    z-index: 3;
  }

  50% {
    transform: translate3d(350px, 0, 0) rotate(0);
    z-index: 3;
  }

  51% {
    z-index: 1;
  }

  100% {
    transform: translate3d(-350px, 0, 0) rotate(90deg);
    z-index: 1;
  }
}

.home-page {
  overflow: hidden;
  margin-left: -100px;
  padding-top: 220px;
  position: relative;

  .planet {
    background: url("images/home/mars-bottom.jpg") center bottom;
    border-radius: 50%;
    height: 800px;
    left: 50%;
    margin: -575px 0 0 -400px;
    overflow: hidden;
    position: absolute;
    top: 0;
    width: 800px;
    z-index: 2;
  }

  .satellite {
    background: url("images/home/mro.png") 0 0;
    height: 97px;
    margin-left: -58px;
    position: absolute;
    left: 50%;
    top: 50px;
    width: 116px;
  }

  &.active .satellite {
    animation: float-around 60s ease-in-out infinite;
  }

  .content {
    font-size: 22px;
    margin: 30px auto 0;
    text-align: center;
    width: 650px;
  }

  h1 {
    font-size: 38px;
    margin: 0 0 20px;
  }

  h2 {
    font-size: 24px;
    font-weight: normal;
  }

  h3 {
    font-size: 20px;
    margin: 5px 0 0;
  }

  p {
    font-size: 15px;
    line-height: 1.5em;
    margin: 10px auto;
    max-width: 80%;
  }

  .column {
    height: 72px;
    margin-top: 20px;
    padding: 0 10px;
  }

  .counter {
    font-size: 12px;

    > strong {
      display: block;
      font-size: 48px;
      letter-spacing: 0;
    }
  }

  .explore {
    @extends #standard-button;
    font-size: 16px;
    line-height: 40px;
    padding: 0;
    width: 60%;

    &:hover {
      background-color: lighten($red, 10%);
    }
  }

  .social-icons {
    
    i {
      color: black;
      font-size: 24px;
      margin: 0 5px;

      &:hover {
        color: $red;
      }
    }
  }
}
