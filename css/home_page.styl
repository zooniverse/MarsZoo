@keyframes rotate {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-50%);
  }
}

@keyframes float-around {
  0% {
    transform: translateX(-350px) rotate(90deg);
    z-index: 3;
  }

  50% {
    transform: translateX(350px) rotate(0);
    z-index: 3;
  }

  51% {
    z-index: 1;
  }

  100% {
    transform: translateX(-350px) rotate(90deg);
    z-index: 1;
  }
}

.home-page {
  overflow: hidden;
  margin-left: -100px;
  padding-top: 275px;
  position: relative;

  .planet {
    background-size: cover;
    border-radius: 50%;
    height: 800px;
    left: 50%;
    margin: -575px 0 0 -400px;
    overflow: hidden;
    position: absolute;
    top: 0;
    width: 800px;
    z-index: 2;

    .surface {
      background: url("images/home/mars-map.jpg") 125% 0;
      height: 100%;
      width: 400%;
    }

    .dimension {
      border-radius: 50%;
      box-shadow: 0px 0 75px $black inset, -100px -25px 150px $black inset;
      height: 100%;
      left: 0;
      position: absolute;
      top: 0;
      width: 100%;
    }
  }

  &.active .planet .surface {
    animation: rotate 120s linear infinite;
  }

  .satellite {
    background: url("images/home/mro.png") 0 0;
    height: 97px;
    margin-left: -58px;
    position: absolute;
    left: 50%;
    top: 50px;
    width: 116px;
  }

  &.active .satellite {
    animation: float-around 60s ease-in-out infinite;
  }

  .content {
    font-size: 12px;
    margin: 0 auto;
    text-align: center;
    width: 530px;
  }

  h1 {
    font-size: 38px;
    margin: 0 0 20px;
  }

  p {
    margin: 10px 0;
  }

  .column {
    border-left: 1px solid rgba($black, 0.75);
    height: 40px;
    margin-top: 20px;
    padding: 0 10px;

    &:first-child {
      border-left: 0;
    }
  }

  .counter {
    font-weight: bold;
    letter-spacing: 1px;
    text-transform: uppercase;

    > strong {
      display: block;
      font-size: 20px;
      font-weight: normal;
      letter-spacing: 0;
    }
  }

  .explore {
    @extends #standard-button;
    font-size: 16px;
    line-height: 40px;
    padding: 0;
    width: 100%;
  }
}
