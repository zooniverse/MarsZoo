@keyframes rotate {
  0% {
    transform: translateX(0);
  }

  100% {
    transform: translateX(-50%);
  }
}

@keyframes float-around {
  0% {
    transform: translateX(-350px) rotate(90deg);
    z-index: 3;
  }

  50% {
    transform: translateX(350px) rotate(0);
    z-index: 3;
  }

  51% {
    z-index: 1;
  }

  100% {
    transform: translateX(-350px) rotate(90deg);
    z-index: 1;
  }
}

