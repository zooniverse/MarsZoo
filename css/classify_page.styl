.classify-page {
  .subject-container {
    height: 648px;
    position: relative;
    width: 840px;

    .delete-button {
      background: $black;
      border: 2px solid $white;
      border-radius: 50%;
      color: $white;
      cursor: pointer;
      display: block;
      height: 14px;
      line-height: 10px;
      margin: -7px 0 0 -7px;
      position: absolute;
      text-align: center;
      width: 14px;

      &:hover {
        background: $red;
      }

      .touch & {
        height: 40px;
        font-size: 30px;
        line-height: 32px
        margin: -20px 0 0 -20px;
        width: 40px;
      }
    }
  }

  .subject {
    height: 100%;
    position: absolute;
    width: 100%;
  }

  .fan-tool-options {
    display: none;
  }
}
