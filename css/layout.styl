html {
  background: blue;
  height: 100%;
  overflow-y: scroll;
}

body {
  background: goldenrod; // TODO: Image
  border: 4px solid blue;
  box-sizing: border-box;
  margin: 0;
  min-height: 100%;
}

#app {
  height: 100%;
  margin: 0 auto;
  overflow: hidden;
  position: relative;
  width: 1024px;
}

.app-navigation {
  float: left;
  margin: 40px 45px 0 0;
  width: 135px;
}

.app-main {
  float: left;
  position: relative;
  width: 840px;

  > * {
    display: none;

    &.active {
      display: block;
    }
  }
}
