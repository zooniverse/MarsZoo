html {
  background: $blue;
  font: 14px $sans;
  height: 100%;
  overflow-y: scroll;
}

body {
  background: url("images/backdrop.jpg") center bottom;
  background-size: cover;
  border: 4px solid $blue;
  box-sizing: border-box;
  margin: 0;
  min-height: 100%;
  padding-bottom: 100px;

  .on-classify & {
    background: $blue;
  }
}

#app {
  clearfix();
  height: 100%;
  margin: 0 auto;
  position: relative;
  width: 1024px;
}

.app-navigation {
  float: left;
  margin: 40px 40px 0 5px;
  width: 135px;
}

.app-main {
  float: left;
  position: relative;
  width: 840px;

  > * {
    display: none;

    &.active {
      display: block;
    }
  }
}

.columns {
  clearfix();

  .column {
    box-sizing: border-box;
    float: left;

    &.one-third {
      width: 33.33%;
    }
  }
}

hr {
  border: 0;
  border-top: 1px solid rgba($black, 0.75);
}

button {
  background: transparent;
  border: 0;
  color: inherit;
  cursor: pointer;
  font: inherit;
  margin: 0;
  padding: 0;
  text-align: inherit;
}
