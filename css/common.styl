$black = #000;
$white = #fff;

$red = #962300;

$blue = #101d22;
$light-blue = #41798c;

$sans = "Helvetica Neue", Arial, Helvetica, sans-serif;

#standard-button {
  background: $red;
  color: $white;
  display: inline-block;
  font-weight: bold;
  padding: 2px 10px;
  text-decoration: none;

  &:active {
    box-shadow: 0 1px 1px rgba($black, 0.6) inset, 0 100px 0 rgba($black, 0.1) inset;
  }
}

#push-button {
  background: $light-blue;
  border-radius: 3px;
  box-shadow: 0 1px 0 rgba($white, 0.3) inset, 0 1px 3px $black;
  padding: 3px 0;
  text-align: center;
  width: 100%;

  &:active {
    box-shadow: 0 1px 1px rgba($black, 0.6) inset, 0 100px 0 rgba($black, 0.1) inset;
  }
}
